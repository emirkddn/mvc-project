@model mvcprojecttesting.Models.ShippingDetails

@{
    ViewData["Title"] = "Checkout";
}

<style>
    .field-validation-error {
        color: red;
    }

    .field-validation-valid {
        display: none;
    }

    .input-validation-error {
        border: 1px solid #f00;
        backgroud-color: #fee;
    }

    .validation-summary-errors {
        font-weight: bold;
        color: #f00;
    }

    .validation-summary-valid {
        display: none;
    }
</style>

<div class="container text-center">
    <div class="row">
        <div class=" col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

                <div class="container mx auto">
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label text-center ">Username</label>
                        <div class="col-sm-9">
                            <span class="badge-danger">
                                @User.Identity.Name
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Adres Tanımı</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Adres</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Adres1, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Şehir</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Semt</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Mahalle</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Posta Kodu</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-rimary">Submit</button>
                        </div>
                    </div>

                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}