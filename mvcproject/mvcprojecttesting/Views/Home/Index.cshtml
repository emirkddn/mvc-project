@using mvcprojecttesting.Models;
@model IEnumerable<mvcprojecttesting.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
}

<!-- CAROUSEL -->
<div class="container pt-5">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 fixed-img" src="~/Upload/asas.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 fixed-img" src="~/Upload/yuyu.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 fixed-img" src="~/Upload/awaw.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<style>
    .fixed-img {
        height: 50vh;
        object-fit: cover;
    }
</style>


<div class="container pb-5">
    @Html.Partial("_ProductList", Model)
</div>
